{
    "name": "dailex/dailex",
    "type": "project",
    "description": "Daikon CQRS & ES integration with the Silex framework.",
    "keywords": [ "daikon", "silex", "symfony", "cqrs", "event-sourcing", "mvc", "framework" ],
    "homepage": "https://github.com/daikon-cqrs/dailex",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Hasham Ahmad",
            "email": "mr.hash@gmail.com",
            "homepage": "https://github.com/MrHash",
            "role": "Developer"
        },
        {
            "name": "Thorsten Schmitt-Rink",
            "email": "schmittrink@gmail.com",
            "homepage": "https://github.com/shrink0r",
            "role": "Developer"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/dailex/dlx-testing"
        }
    ],
    "require": {
        "php": "^7.2",
        "daikon/async-job": "dev-upgrade-7.2",
        "daikon/config": "dev-upgrade-7.2",
        "daikon/couchdb-adapter": "dev-upgrade-7.2",
        "daikon/elasticsearch5-adapter": "dev-upgrade-7.2",
        "daikon/entity": "dev-upgrade-7.2",
        "daikon/event-sourcing": "dev-upgrade-7.2",
        "daikon/flysystem-adapter": "dev-upgrade-7.2",
        "daikon/rabbitmq3-adapter": "dev-upgrade-7.2",
        "daikon/read-model": "dev-upgrade-7.2",
        "dailex/dlx-security": "dev-upgrade-7.2",
        "dailex/dlx-testing": "dev-upgrade-7.2",
        "monolog/monolog": "^1.0",
        "psr/container": "^1.0",
        "rdlowrey/auryn": "^1.4.0",
        "roave/security-advisories": "master@dev",
        "silex/silex": "^2.0",
        "swiftmailer/swiftmailer": "^5.4",
        "symfony/asset": "^3.0",
        "symfony/config": "^3.0",
        "symfony/console": "^3.0",
        "symfony/filesystem": "^3.0",
        "symfony/form": "^3.0",
        "symfony/serializer": "^3.0",
        "symfony/translation": "^3.0",
        "symfony/twig-bridge": "^3.0",
        "symfony/validator": "^3.0",
        "symfony/yaml": "^3.0",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "sebastian/phpcpd": "^4.1",
        "silex/web-profiler": "^2.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Dailex\\": "app/lib/"
        }
    },
    "bin": [
        "bin/dailex",
        "bin/dailex.php"
    ],
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 app/",
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' app/",
        "copy-paste-detector": "phpcpd app/ || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-deps": "composer validate --with-dependencies --strict",
        "validate-json": "composer validate --no-check-all --no-check-lock"
    }
}